{
  "name": "DeepLで翻訳",
  "manifest_version": 2,
  "version": "1.0",
  "permissions" : [
     "contextMenus",
     "http://*/*",
     "https://*/*"
  ],
  "content_scripts": [{
      "matches": ["http://*/*", "https://*/*" ],
      "js": ["content_scripts.js"]
  }],
  "background" : {
     "scripts" : ["background.js"]
  },
  "browser_action": {
      "name": "DeepLで翻訳"
  }
}
